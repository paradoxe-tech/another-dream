{
  "name": "another-dream",
  "version": "1.0.0",
  "description": "Just Another Dream",
  "type": "module",
  "scripts": {
    "check": "npx tsc --outdir .check",
    "count": "cloc source > .dev/stats.txt",
    "stats": "cat .dev/stats.txt",
    "del-game-dist": "sh ./.dev/del-game-dist.sh",
    "del-creator-dist": "rm -rf dist/creator",
    "build-game": "npm run count && npm run del-game-dist && npx parcel build source/index.html",
    "build-creator": "npm run count && npm run del-creator-dist && npx parcel build source/creator/index.html --dist-dir dist/creator --public-url /creator/",
    "build-all": "npm run build-game && npm run build-creator",
    "serve": "npx tsx server.ts",
    "prod": "npm run build-all && npm run serve"
  },
  "author": "Just Another Dreamteam",
  "license": "ISC",
  "dependencies": {
    "babylonjs": "^8.0.2",
    "babylonjs-gui": "^8.7.0",
    "babylonjs-loaders": "^8.0.2",
    "express": "^4.21.2",
    "node": "^23.11.0",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@types/babylonjs": "^2.3.31",
    "@types/express": "^5.0.1",
    "@types/node": "^20.10.0",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "events": "^3.3.0",
    "parcel": "^2.14.4",
    "path-browserify": "^1.0.1",
    "pixelarticons": "1.8.0",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "string_decoder": "^1.3.0",
    "svgo": "^3.3.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.2",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  }
}
